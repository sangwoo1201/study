<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dw.emp.mapper.EmpMapper">
	
	<select id="selectEmpByDeptno" resultType="EmpVO">
		SELECT
			empno,
			ename,
			sal,
			comm
		FROM emp
		WHERE deptno = #{deptno}
	</select>
	
	<update id="updateEmpComm">
		UPDATE emp
		SET comm = sal * 0.1
		WHERE deptno = #{deptno}
	</update>
	
	<delete id="deleteEmp">
		DELETE FROM emp
		WHERE empno = #{empno}
	</delete>
	
	<select id="selectEmp" resultType="EmpVO">
		SELECT
			empno,
			ename,
			job,
			sal
		FROM emp
	</select>
	
</mapper>